.container {
    padding: 0;
    background-color: rgb(230, 230, 230);
}

.user-info {
    display: flex;
    align-items: center;
    width: 100%;
    height: 94px;
    background-color: #fff;
}

.user,
.no-user {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    background-color: #fff;
}

.userinfo-avatar {
    width: 64px;
    height: 64px;
    margin: 0 20px;
    border-radius: 50%;
}

.userinfo-nickname {
    width: auto;
    white-space: nowrap;
    font-size: 16px;
    height: 40px;
    line-height: 40px;
}

.no-avatar {
    width: 64px;
    height: 64px;
    margin: 0 20px;
    border-radius: 50%;
    background-color: rgb(214, 214, 214);
    text-align: center;
    line-height: 64px;
    font-size: 16px;
    color: #999;
}

.mini-btn {
    margin: 0 20px;
}

.view-cell {
    width: 100%;
    margin-top: 10px;
    background-color: #fff;
}

.van-cell-item {
    width: 100%;
    margin-top: 10px;
}

.study-record {
    min-height: 200px;
    width: calc(100% - 20px);
    border-radius: 5px;
    background-image: linear-gradient(to right, #adadad, #8787b1);
    display: flex;
    margin: 10px 10px;
    justify-content: space-between;
}

.small-button {
    width: 80px;
    height: 22px;
    border-radius: 10px;
    text-align: center;
    line-height: 22px;
    background-image: linear-gradient(to right, #8888e0, #c6c6eb);
    cursor: pointer;
}

.white-color {
    color: #fff;
}

.small-size {
    font-size: 12px;
}

.stydu-option {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    justify-content: space-between;
    height: 200px;
    margin: 10px 10px;
}

.study-room {
    flex: 1;
    min-height: 200px;
    height: auto;
    display: flex;
    margin: 10px 10px;
    flex-direction: column;
    align-items: flex-start;
}

.title {
    width: 100%;
    height: 30px;
    font-size: 14px;
    font-weight: 600;
    line-height: 30px;
    color: rgb(48, 48, 48);
}

.record-item {
    height: 24px;
    font-size: 12px;
    margin: 10px 0;
    color: rgb(216, 216, 216);
}