.container {
    padding: 0;
    margin: 0;
}

.order {
    margin: 10px 15px;
    width: calc(100% - 30px);
    height: 178px;
    border-radius: 5px;
    box-shadow: rgb(192, 192, 192) 0px 0px 4px;
}

.order-content {
    height: calc(100% - 36px);
    width: calc(100% - 36px);
    margin: 18px 18px;
    display: flex;
    flex-direction: column;
}

.order-detail,
.order-code,
.order-finish {
    width: 100%;
}

.order-code {
    background: linear-gradient(270deg, rgba(184, 183, 253, 1) 0%, rgba(140, 139, 206, 1) 100%);
    height: 40px;
    border-radius: 5px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 16px;
    color: #fff;
}

.bottom {
    height: 40px;
    color: #7F7F7F;
    font-size: 14px;
}

.order-detail {
    display: flex;
    flex: 1;
}

.order-detail--left {
    display: flex;
    flex: 1;
    flex-direction: column;
}

.order-detail--right {
    display: flex;
    align-items: flex-end;
    justify-content: flex-end;
    flex: 1;
    width: 80px;
}

.order-detail--right-souc {
    color: #8080FF;
    font-size: 14px;
    height: 24px;
    align-items: center;
    display: flex;
    margin-bottom: 10px;
}

.order-detail-label {
    margin: 5px 0;
    height: 24px;
    display: flex;
    align-items: center;
    font-size: 14px;
    font-weight: 600;
    white-space: nowrap;
}

.txt {
    font-size: 12px;
    font-weight: 400;
    height: 24px;
    line-height: 24px;
    white-space: nowrap;
    margin-left: 10px;
}